  .title-xl {
    font-size: 3rem;
  }

  .center {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-image {
    max-width: 70vw;
    display: block;
    /* max-width: 230px; */
    /* max-height: 95px; */
    height: auto;
  }

  .hero-image-split {
    /* max-width: 30vw; */
    /* max-height: 500px; */
    height: 30vw;
    display: block;
