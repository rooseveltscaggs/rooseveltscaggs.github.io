---
import MainLayout from "../../layouts/MainLayout.astro";
import "../../styles/uikit.css";
import { Image } from "astro:assets";
// import "../../styles/global.css";

import HeroImage from "../../img/my-housing/ProjectCardPreview.png";
import MainframeMBPImage from "../../img/mainframe_msb_macbookpro.png";
import MBP_AvailableRoomSearch from "../../img/my-housing/MBP_AvailableRoomSearch.png";
import MBP_RoomSelectMBP from "../../img/my-housing/MBP_RoomSelectMBP.png";
import MBP_DrawApplication from "../../img/my-housing/MBP_DrawApplication.png";
import MBP_DrawWizard2 from "../../img/my-housing/MBP_DrawWizard2.png";
import MBP_DrawSettings from "../../img/my-housing/MBP_DrawSettings.png";
import MBP_DrawManagement from "../../img/my-housing/MBP_DrawManagement.png";
import MBP_RoomManagement from "../../img/my-housing/MBP_RoomManagement.png";
import MBP_RoomSelectionComplete from "../../img/my-housing/MBP_RoomSelectionComplete.png";
---

<script is:inline src="https://unpkg.com/feather-icons"></script>
<script
  is:inline
  defer=""
  src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"
  crossorigin="anonymous"></script>
<MainLayout subtitle="My Housing Upgraded">
  <header
    class="page-header-ui page-header-ui-dark bg-gradient-primary-to-secondary">
    <div class="page-header-ui-content">
      <div class="container px-5">
        <div class="row gx-5 justify-content-center">
          <div class="col-xl-8 col-lg-10 text-center mb-4" data-aos="fade">
            <h1 class="page-header-ui-title">My Housing Upgraded</h1>
            <p class="page-header-ui-text">
              Putting the management, allocation, and selection of housing
              resources at your fingertips
            </p>
            <a
              class="btn btn-success fw-500 me-2"
              href="https://myhousing-demo.swstx.org"
              target="_blank"
              rel="noopener noreferrer">Launch Demo</a
            >
          </div>
        </div>
      </div>
    </div>
    <div class="svg-border-rounded text-light">
      <!-- Rounded SVG Border-->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 144.54 17.34"
        preserveAspectRatio="none"
        fill="currentColor">
        <path
          d="M144.54,17.34H0V0H144.54ZM0,0S32.36,17.34,72.27,17.34,144.54,0,144.54,0"
        ></path>
      </svg>
    </div>
  </header>
  <section class="bg-light pb-10 pt-1">
    <div class="container px-5">
      <div class="device-laptop text-gray-200 mt-n10" data-aos="fade-up">
        <svg
          class="device-container"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="83.911 298.53 426.962 243.838">
          <path
            d="M474.843 516.208V309.886c0-6.418-4.938-11.355-11.354-11.355H131.791c-6.417 0-11.354 4.938-11.354 11.355v206.816H83.911v13.326c4.938 7.896 31.098 12.34 40.969 12.34h345.024c10.366 0 36.526-4.936 40.969-12.34v-13.326h-36.03v-.494zM134.26 313.341h326.762v203.361H134.26V313.341z">
          </path>
        </svg>
        <img class="device-screenshot" src={HeroImage.src} />
      </div>
    </div>
  </section>

  <section class="bg-white py-10">
    <div class="container px-5">
      <div class="row gx-5 text-center">
        <div class="col-lg-4 mb-5 mb-lg-0">
          <div
            class="icon-stack icon-stack-xl bg-gradient-primary-to-secondary text-white mb-4">
            <i data-feather="layers"></i>
          </div>
          <h3>Always up-to-date</h3>
          <p class="mb-0">
            Housing data is automatically refreshed, giving students the most
            accurate information on housing availability without any manual work
            on the part of housing staff.
          </p>
        </div>
        <div class="col-lg-4 mb-5 mb-lg-0">
          <div
            class="icon-stack icon-stack-xl bg-gradient-primary-to-secondary text-white mb-4">
            <i data-feather="smartphone"></i>
          </div>
          <h3>Modern responsive design</h3>
          <p class="mb-0">
            Designed with a mobile-focused approach, every aspect of the app
            looks and functions great on any device!
          </p>
        </div>
        <div class="col-lg-4">
          <div
            class="icon-stack icon-stack-xl bg-gradient-primary-to-secondary text-white mb-4">
            <i data-feather="code"></i>
          </div>
          <h3>Feature rich</h3>
          <p class="mb-0">
            Powerful tools for both admins and end-users are provided, allowing
            for the system to management itself.
          </p>
        </div>
      </div>
    </div>
  </section>
  <section class="bg-light py-10">
    <div class="container px-5">
      <div class="row gx-5 justify-content-center">
        <div class="col-lg-6">
          <div class="text-center">
            <div class="text-xs text-uppercase-expanded text-primary mb-2">
              Application Features
            </div>
            <h2 class="mb-5">Housing doesn't have to be complicated</h2>
          </div>
        </div>
      </div>
      <div class="row gx-5">
        <div class="col-lg-4 col-md-6 mb-5" data-aos="fade-up">
          <a
            class="card text-center text-decoration-none h-100 lift"
            href="#LiveSearch">
            <div class="card-body py-5">
              <div
                class="icon-stack icon-stack-lg bg-green-soft text-green mb-4">
                <i data-feather="search"></i>
              </div>
              <h5>Live Housing Search</h5>
              <p class="card-text small">
                Students can always access a live list of housing that is
                currently available, making their search for suitable housing
                quick and easy
              </p>
            </div>
          </a>
        </div>
        <div
          class="col-lg-4 col-md-6 mb-5"
          data-aos="fade-up"
          data-aos-delay="100">
          <a
            class="card text-center text-decoration-none h-100 lift"
            href="#LiveRoomSelection">
            <div class="card-body py-5">
              <div class="icon-stack icon-stack-lg bg-red-soft text-red mb-4">
                <i data-feather="users"></i>
              </div>
              <h5>Live Room Selection</h5>
              <p class="card-text small">
                During the room selection process, students can see the status
                of each of their drawmates live as the selection happens
              </p>
            </div>
          </a>
        </div>
        <div
          class="col-lg-4 col-md-6 mb-5"
          data-aos="fade-up"
          data-aos-delay="150">
          <a
            class="card text-center text-decoration-none h-100 lift"
            href="#EasyApplicationProcess">
            <div class="card-body py-5">
              <div
                class="icon-stack icon-stack-lg bg-yellow-soft text-yellow mb-4">
                <i data-feather="edit-3"></i>
              </div>
              <h5>Easy Application Process</h5>
              <p class="card-text small">
                Housing applications are easy to configure and fill out, taking
                mere seconds to be completed by students
              </p>
            </div>
          </a>
        </div>
        <div class="col-lg-4 col-md-6 mb-5 mb-lg-0" data-aos="fade-up">
          <a
            class="card text-center text-decoration-none h-100 lift"
            href="#HousingLottery">
            <div class="card-body py-5">
              <div
                class="icon-stack icon-stack-lg bg-purple-soft text-purple mb-4">
                <i class="fa-solid fa-shuffle"></i>
              </div>
              <h5>Simplified Housing Lottery</h5>
              <p class="card-text small">
                Configuration of student housing priority weights and assignment
                of randomized housing draw times can be setup and published
                within minutes
              </p>
            </div>
          </a>
        </div>
        <div
          class="col-lg-4 col-md-6 mb-5 mb-md-0"
          data-aos="fade-up"
          data-aos-delay="100">
          <a
            class="card text-center text-decoration-none h-100 lift"
            href="#AdminTools">
            <div class="card-body py-5">
              <div class="icon-stack icon-stack-lg bg-blue-soft text-blue mb-4">
                <i class="fa-solid fa-screwdriver-wrench"></i>
              </div>
              <h5>Powerful Admin Tools</h5>
              <p class="card-text small">
                Managing housing inventory is a breeze with the ability to add,
                reserve, and manually assign housing with just two clicks
              </p>
            </div>
          </a>
        </div>
        <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="150">
          <a
            class="card text-center text-decoration-none h-100 lift"
            href="#HousingReservations">
            <div class="card-body py-5">
              <div
                class="icon-stack icon-stack-lg bg-orange-soft text-orange mb-4">
                <i class="fa-solid fa-building-lock"></i>
              </div>
              <h5>Automatic Housing Reservations</h5>
              <p class="card-text small">
                Once rooms have been selected by students, they are
                automatically marked as reserved. Thus eliminating the risk of
                overbooked housing.
              </p>
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-light">
    <div class="container-lg py-5" id="LiveSearch">
      <h1 class="page-header-ui-title title-xl text-green mb-3">
        Live Housing Search
      </h1>
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <h3 class="mb-2 text-green">Housing lists update automatically</h3>
            <h4 class="col-xl-7 mb-4">
              Even before their randomized draw time, students can view a list
              of available housing that is always up-to-date.
            </h4>
          </div>
          <Image
            src={MBP_AvailableRoomSearch}
            alt="Mainframe's Magic Schedule Builder on the homepage"
            class="hero-image center"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="bg-light">
    <div class="container-lg py-5" id="LiveRoomSelection">
      <h1 class="page-header-ui-title title-xl text-red mb-3">
        Live Room Selection
      </h1>
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <h3 class="mb-2 text-red">
              A Live Room Selection Experience, powered by Websockets
            </h3>
            <h4 class="col-xl-7 mb-4">
              When selecting a room with their draw group, students can see the
              selections their draw group members make from login to completion.
              No longer do draw group members need to coordinate a meeting time
              or location.
            </h4>
          </div>
          <Image
            src={MBP_RoomSelectMBP}
            alt="Mainframe's Magic Schedule Builder on the homepage"
            class="hero-image center"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="bg-light">
    <div class="container-lg py-5" id="EasyApplicationProcess">
      <h1 class="page-header-ui-title title-xl text-yellow mb-3">
        Easy Application Process
      </h1>
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <h3 class="mb-2 text-yellow">Apply for the room draw in seconds</h3>
            <h4 class="col-xl-7 mb-4">
              My Housing Upgraded makes it easy to apply for one or more room
              draw lotteries. Simply, choose a draw, add draw group members, and
              submit.
            </h4>
          </div>
          <Image
            src={MBP_DrawApplication}
            alt="Mainframe's Magic Schedule Builder on the homepage"
            class="hero-image center"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="bg-light">
    <div class="container-lg py-5" id="HousingLottery">
      <h1 class="page-header-ui-title title-xl text-purple mb-3">
        Simplified Housing Lottery
      </h1>
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <h3 class="mb-2 text-purple">Draw Wizard</h3>
            <h4 class="col-xl-7 mb-4">
              Assign priority weights to certain groups based on your housing
              department's policies.
            </h4>
          </div>
          <Image
            src={MBP_DrawWizard2}
            alt="Mainframe's Magic Schedule Builder on the homepage"
            class="hero-image center"
          />
        </div>
      </div>
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <h3 class="mb-2 text-purple">Generate and Preview Draw Times</h3>
            <h4 class="col-xl-7 mb-4">
              After assigning priority weights to draw groups, generate and
              preview each group's randomized draw time.
            </h4>
          </div>
          <Image
            src={MBP_DrawSettings}
            alt="Mainframe's Magic Schedule Builder on the homepage"
            class="hero-image center"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="bg-light">
    <div class="container-lg py-5" id="AdminTools">
      <h1 class="page-header-ui-title title-xl text-blue mb-3">
        Powerful Admin Tools
      </h1>
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <h3 class="mb-2 text-blue">Draw Management</h3>
            <h4 class="col-xl-7 mb-4">
              Review draw applications, generate draw times, and edit settings.
            </h4>
          </div>
          <Image
            src={MBP_DrawManagement}
            alt="Mainframe's Magic Schedule Builder on the homepage"
            class="hero-image center"
          />
        </div>
      </div>
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <h3 class="mb-2 text-blue">Room Management</h3>
            <h4 class="col-xl-7 mb-4">
              Edit room information, pre-reserve rooms, or manually assign
              students.
            </h4>
          </div>
          <Image
            src={MBP_RoomManagement}
            alt="Mainframe's Magic Schedule Builder on the homepage"
            class="hero-image center"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="bg-light">
    <div class="container-lg py-5" id="HousingReservations">
      <h1 class="page-header-ui-title title-xl text-orange mb-3">
        Automatic Housing Reservations
      </h1>
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <h3 class="mb-2 text-orange">
              Breathe easy knowing your selected rooms are reserved
            </h3>
            <h4 class="col-xl-7 mb-4">
              After students complete the room selection process, selected rooms
              are automatically marked as reserved.
            </h4>
          </div>
          <Image
            src={MBP_RoomSelectionComplete}
            alt="Mainframe's Magic Schedule Builder on the homepage"
            class="hero-image center"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="bg-dark pb-10 pt-15">
    <div class="container px-5">
      <div class="row gx-5 mb-10 mt-5">
        <div class="col-lg-6 mb-5">
          <div class="d-flex h-100">
            <div class="icon-stack flex-shrink-0 bg-teal text-white">
              <i class="fa-solid fa-question"></i>
            </div>
            <div class="ms-4">
              <h5 class="text-white">What technologies are used?</h5>
              <p class="text-white-50">
                My Housing Upgraded was written using HTML, CSS, Javascript, and
                Python. Specifically, it uses the jQuery library, vanilla
                Javascript, and the Flask Python backend framework.
                Additionally, the application also uses Websockets in order to
                deliver the live room selection experience.
              </p>
            </div>
          </div>
        </div>
        <div class="col-lg-6 mb-5">
          <div class="d-flex h-100">
            <div class="icon-stack flex-shrink-0 bg-teal text-white">
              <i class="fas fa-question"></i>
            </div>
            <div class="ms-4">
              <h5 class="text-white">How is the data stored?</h5>
              <p class="text-white-50">
                The application utilizes SQLAlchemy in order to interface with
                the PostgreSQL database, however any database compatible with
                SQLAlchemy can be configured for use with the app.
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="row gx-5 justify-content-center text-center">
        <div class="col-lg-8">
          <div
            class="badge bg-transparent-light rounded-pill badge-marketing mb-4">
            Get Started
          </div>
          <h2 class="text-white">Preview My Housing Upgraded</h2>
          <p class="lead text-white-50 mb-5">
            Want to test out some of My Housing's features?
            <br />Try the demo version of the app to preview its capabilities!
          </p>
          <a
            class="btn btn-teal fw-500"
            href="https://myhousing-demo.swstx.org"
            target="_blank"
            rel="noopener noreferrer">Launch Demo</a
          >
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<script is:inline>
  feather.replace();
</script>

<style>
  .title-xl {
    font-size: 3rem;
  }

  .center {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-image {
    max-width: 70vw;
    display: block;
    /* max-width: 230px; */
    /* max-height: 95px; */
    height: auto;
  }

  .hero-image-split {
    /* max-width: 30vw; */
    /* max-height: 500px; */
    height: 30vw;
    display: block;
    /* max-width: 230px; */
    /* max-height: 95px; */
    width: auto;
  }

  .mobile-device {
    max-height: 500px;
    width: auto;
  }

  .hero-md-image {
    /* max-width: 30vw; */
    max-width: 40vw;
    min-width: 275px;
    display: block;
    /* max-width: 230px; */
    /* max-height: 95px; */
    height: auto;
  }
</style>
